#include<stdio.h>
#include<stdbool.h>
int main(void)
{
	int n,c,k,m,d,s;
	scanf("%d %d %d",&n,&k,&m);
	bool a[n];
	d=k-2;
	for(c=0;c<n;c++){
		a[c]=false;
	}
	for(c=0;c<n-2;c++){
		for(s=0;s<m;){
			d++;
			if(d==n)d=0;
			if(a[d])continue;
			s++;
		}
		a[d]=true;
	}
	for(c=0;c<n;c++){
		if(!a[c])printf("%d ",c+1);
	}
	return 0;
}
